<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.kicksound">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kicksound_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Controllers.Playlist.AddMusicToPlayList"></activity>
        <activity android:name=".Controllers.Song.ArtistMusics" />
        <activity android:name=".Controllers.Song.AddMusic" />
        <activity android:name=".Controllers.Song.FavoriteMusics" />
        <activity android:name=".playlist_item" />
        <activity android:name=".Controllers.Playlist.Playlists" />
        <activity android:name=".Controllers.Event.EventByFollowedArtiste" />
        <activity android:name=".Controllers.Event.EventParticipation" />
        <activity android:name=".Controllers.Event.EventParticipants" />
        <activity android:name=".Controllers.Event.EventView" />
        <activity android:name=".Controllers.Event.MyEvents" />
        <activity android:name=".Controllers.Search.UserSearched" />
        <activity android:name=".Controllers.User.UserPicture" />
        <activity android:name=".Controllers.Event.CreateEventActivity" />
        <activity android:name=".Controllers.User.ResetPasswordActivity" />
        <activity android:name=".Controllers.Connection.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.Tabs.TabActivity"
            android:label="@string/title_activity_tab"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controllers.Connection.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".Controllers.Connection.LoginActivity"
            tools:ignore="InnerclassSeparator" />
    </application>

</manifest>